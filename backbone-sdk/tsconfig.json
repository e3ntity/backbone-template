{
  "compilerOptions": {
    "declaration": true,
    "target": "es2016",
    "module": "commonjs",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": false,
    "paths": { "@root/*": ["./src/*"] },
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "plugins": []
  },
  "include": ["./src/**/*"]
}
