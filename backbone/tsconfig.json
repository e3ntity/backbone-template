{
    "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "baseUrl": ".",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noFallthroughCasesInSwitch": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "allowJs": true,
      "checkJs": false,
      "paths": { "@db/*": ["./database/*"], "@root/*": ["./src/*"] },
      "typeRoots": ["./src/types", "./node_modules/@types"]
    },
    "include": ["./src/**/*"]
  }
  